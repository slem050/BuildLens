{
  "name": "buildlens",
  "version": "1.0.0",
  "description": "Function-Level Test Impact Analysis for Jest",
  "main": "dist/index.js",
  "bin": {
    "buildlens": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "prepublishOnly": "npm run build",
    "test": "bash scripts/test-db-check.sh && TEST_DB_PORT=5433 jest",
    "test:watch": "bash scripts/test-db-check.sh && TEST_DB_PORT=5433 jest --watch",
    "test:coverage": "bash scripts/test-db-check.sh && TEST_DB_PORT=5433 jest --coverage",
    "test:coverage:ci": "TEST_DB_PORT=5433 jest --coverage",
    "test:unit": "bash scripts/test-db-check.sh && TEST_DB_PORT=5433 jest src/__tests__/unit",
    "test:component": "bash scripts/test-db-check.sh && TEST_DB_PORT=5433 jest src/__tests__/component",
    "test:ci": "TEST_DB_PORT=5433 jest",
    "lint": "echo 'No linter configured yet'",
    "test:learn": "buildlens learn",
    "test:diff": "buildlens select",
    "docker:start": "bash scripts/docker-start.sh",
    "docker:stop": "bash scripts/docker-stop.sh",
    "docker:reset": "bash scripts/docker-reset.sh",
    "docker:logs": "docker compose logs -f postgres || docker-compose logs -f postgres",
    "db:init": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/buildlens buildlens init",
    "test:db:start": "docker compose -f docker-compose.test.yml up -d",
    "test:db:stop": "docker compose -f docker-compose.test.yml down"
  },
  "keywords": [
    "jest",
    "test-impact-analysis",
    "tia",
    "testing",
    "coverage"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "pg": "^8.11.3",
    "simple-git": "^3.20.0",
    "ts-morph": "^21.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "action.yml",
    "README.md",
    "LICENSE"
  ]
}
